{
  "version": 2,
  "framework": null,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "**/*.html",   "use": "@vercel/static" },
    { "src": "*.js",        "use": "@vercel/static" },
    { "src": "assets/**",   "use": "@vercel/static" },
    { "src": "public/**",   "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ]
}